<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:translationZ="4dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_pro"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"
            android:src="@drawable/baner3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:textSize="13dp"
                    android:text="Load category"
                    android:textColor="#000705"
                    android:elevation="2dp"
                    android:ellipsize="end"
                    android:inputType="none"
                    android:maxLines="2"
                    android:fontFamily="@font/poppinsmedium"
                    tools:ignore="UnknownId" />

            </LinearLayout>


                <LinearLayout
                    android:id="@+id/details_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/avatar_post"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/name_pro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#F14712"
                            android:text="45.0000"
                            android:elevation="2dp"
                            android:ellipsize="end"
                            android:inputType="none"
                            android:maxLines="2"
                            android:textSize="15dp" />

                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:id="@+id/qty_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Easy"
                        android:textColor="#4E4D4E"
                        android:textSize="11dp" />

                </LinearLayout>




        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>