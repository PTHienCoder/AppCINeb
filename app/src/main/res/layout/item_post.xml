<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:elevation="5dp"
    android:translationZ="10dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/cat_img"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="410dp"
        android:src="@drawable/ic_img"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="65dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:text="Load category"
                android:textColor="#000705"
                android:elevation="5dp"
                android:fontFamily="@font/poppinsmedium"
                tools:ignore="UnknownId" />

        </LinearLayout>
        <TextView
            android:id="@+id/textView2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerHorizontal="true"
            android:layout_height="1dp"
            android:background="#9B9C9C"
            android:layout_width="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/details_user"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/avatar_post"
                    app:c_background_color="@null"
                    android:src="@drawable/ic_face"/>


                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@+id/avatar_post"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="16dp"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/timepost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="10dp"
                        android:textColor="#363737" />
                </LinearLayout>

            </LinearLayout>
<!--            <ImageButton-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:layout_marginLeft="5dp"-->
<!--                android:layout_marginRight="5dp"-->
<!--                android:id="@+id/btn_more"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:background="@color/white"-->
<!--                android:src="@drawable/ic_level" />-->
            <TextView
                android:id="@+id/name_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:textColor="#535253"
                android:textSize="17dp"
                android:layout_marginTop="30dp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageButton
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/btn_save"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_nosavee" />
                <ImageButton
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/btn_save1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_saved" />
            </RelativeLayout>




        </LinearLayout>
     </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>